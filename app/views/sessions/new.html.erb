<h1>Login</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_with url: login_path, method: :post, local: true do %>
  <div class="mb-3">
    <%= label_tag :email, "Email" %>
    <%= email_field_tag :email, nil, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password, nil, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= label_tag :name, "Name (for new users)" %>
    <%= text_field_tag :name, nil, class: "form-control", placeholder: "Only required if you're new" %>
  </div>

  <%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>
